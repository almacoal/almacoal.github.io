<MudTimelineItem Variant="Variant.Filled" TimelineAlign="TimelineAlign.End" Color="Color.Secondary">
    <ItemDot>
        <MudIcon Icon="@Icon" Size="Size.Small" Style="@IconColorStyle"/>
    </ItemDot>
    <ItemContent>
        <MudCard Style="background:#e9e9e9;">
            @if (@Image != null) {
            <MudCardMedia Image="@Image"/>
            }
            <MudCardHeader Style="padding-bottom:0;padding-top:.5rem;">
                <MudText Typo="Typo.h6">
                    @JobTitle
                </MudText>
            </MudCardHeader>
            <MudCardContent Style="padding-top:0;padding-bottom:.5rem;">
                <MudText Typo="Typo.body1">
                    @Company
                </MudText>
                <MudText Typo="Typo.body2">
                    @Description
                </MudText>
                <MudText Typo="Typo.button">@Location</MudText>
                <MudText Typo="Typo.overline">@Interval</MudText>
            </MudCardContent>
        </MudCard>
    </ItemContent>
</MudTimelineItem>

@code {
    [Parameter]
    public string Icon { get; set; } = @Icons.Material.Rounded.Work;

    [Parameter]
    public string IconColor { get; set; } = "gray";
    string IconColorStyle => $"color:{IconColor};";

    [Parameter]
    public string StartDate { get; set; } = "Nov’89";

    [Parameter]
    public string? EndDate { get; set; }
    string Interval =>
        EndDate != StartDate
        ? $"{StartDate} — {(EndDate ?? "present")}"
        : StartDate;
    
    [Parameter]
    public string Location { get; set; } = "Cascais, Portugal";
    
    [Parameter]
    public string JobTitle { get; set; } = "Job Title";
    
    [Parameter]
    public string Company { get; set; } = "Company";
    
    [Parameter]
    public string? Description { get; set; }
    
    [Parameter]
    public string? Image { get; set; }
}
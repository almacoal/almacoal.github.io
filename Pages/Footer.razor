<section id="connect">
    <MudToolBar Dense="true" Class="mud-toolbar-appbar" Style="background:#e9e9e9;">
        <MudIconButton Title="LinkedIn" Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" Href="https://www.linkedin.com/in/almacoal/" Target="_blank"/>
        <MudIconButton Title="Instagram" Icon="@Icons.Custom.Brands.Instagram" Color="Color.Primary" Href="https://www.instagram.com/almacoal/" Target="_blank"/>
        <MudSpacer/>
        <MudText Typo="Typo.caption" Align="Align.Center">
            Alexandre Alves Â© @yearInterval
        </MudText>
    </MudToolBar>
</section>

@code {
    static ushort firstYear = 2023,
        currentYear = (ushort)DateTime.Now.Year;
    string yearInterval = currentYear == firstYear
        ? $"{firstYear}"
        : $"{firstYear}-{currentYear}";
}
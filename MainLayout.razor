@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" IsDarkMode="false"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <homepage.Pages.Header/>
    <MudMainContent>
        @Body
    </MudMainContent>
    <homepage.Pages.Footer/>
</MudLayout>

@code {
    static string
        dark = "#373737",
        darker = "#272727",
        darkest = "#171717",
        high = "#a68d3f",
        light = "#c9c9c9",
        lighter = "#d9d9d9",
        lightest = "#e9e9e9";
    MudTheme theme = new MudTheme() {
        Palette = new Palette() {
            Background = lighter,
            TextPrimary = darker,
            AppbarBackground = lightest,
            AppbarText = dark,
            TableLines = light,
            Primary = high,
            Secondary = lightest,
            Tertiary = light,
        },
        Typography = new Typography() {
            Default = new Default() {
                FontFamily = new[] { "Atkinson Hyperlegible", "sans-serif" },
                FontSize = "1.1rem",
            }
        }
    };
}